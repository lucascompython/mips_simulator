---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>

<style is:global>
    html,
    body {
        margin: 0;
        width: 100%;
        min-height: 100%;
    }
</style>
